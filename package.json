{
	"name": "notion-widget",
	"version": "1.0.0",
	"description": "notion widget",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"dev": "nodemon",
		"build": "electron-builder build"
	},
	"nodemonConfig": {
		"exec": "yarn start",
		"ext": "js, css"
	},
	"repository": "https://github.com/kimjisub/notion-widget",
	"keywords": [
		"Electron",
		"quick",
		"start",
		"tutorial",
		"demo"
	],
	"author": "kimjisub",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron-builder": "^22.8.1",
		"nodemon": "^2.0.4",
		"electron": "^10.1.3"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"electron-cfg": "^1.2.5"
	},
	"build": {
		"asar": true,
		"appId": "me.kimjisub.notion",
		"productName": "Notion Desktop",
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			],
			"icon": "./notion.ico"
		},
		"nsis": {
			"oneClick": true,
			"perMachine": false,
			"createDesktopShortcut": true,
			"installerIcon": "./notion.ico"
		}
	}
}
